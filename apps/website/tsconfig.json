{
	"extends": "tsconfig/nextjs.json",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": ["./*"],
			"contentlayer/generated": ["./.contentlayer/generated"]
		},
		"plugins": [
			{
				"name": "next"
			}
		],
		"moduleResolution": "node"
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		".contentlayer/generated"
	],
	"exclude": ["node_modules", "./scripts/build-components.ts"]
}
