{
	"extends": "tsconfig/nextjs.json",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@src/*": ["src/*"],
			"config": ["src/config.ts"],

			"message-router": ["../../node_modules/@radixdlt/connector-extension/src/message-router.ts"],
			"chrome/*": ["../../node_modules/@radixdlt/connector-extension/src/chrome/*"],
			"ledger/*": ["../../node_modules/@radixdlt/connector-extension/src/ledger/*"],
			"offscreen/*": ["../../node_modules/@radixdlt/connector-extension/src/offscreen/*"],
			"connector/*": ["../../node_modules/@radixdlt/connector-extension/src/connector/*"],
			"utils": ["../../node_modules/@radixdlt/connector-extension/src/utils"],
			"utils/*": ["../../node_modules/@radixdlt/connector-extension/src/utils/*"],
			"queues/*": ["../../node_modules/@radixdlt/connector-extension/src/queues/*"],
			"crypto/*": ["../../node_modules/@radixdlt/connector-extension/src/crypto/*"],
			"io-types/*": ["../../node_modules/@radixdlt/connector-extension/src/io-types/*"],
		},
	},
	"include": [
		"package.json",
		"manifest.ts",
		"vite.config.ts",
		"playwright.config.ts",
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.d.ts",
		"tests/**/*.ts",
	],
}
