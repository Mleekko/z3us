{
	"extends": "tsconfig/nextjs.json",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@src/*": ["src/*"],
		},

		"tsBuildInfoFile": ".build-cache/tsconfig.tsbuildinfo"
	},
	"include": [
		"src/**/*.json",
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.d.ts",
		"tests/**/*.ts",
	],
	"references": [
		{ "path": "./tsconfig.node.json" },
		{ "path": "./tsconfig.radix.json" },
	]
}
