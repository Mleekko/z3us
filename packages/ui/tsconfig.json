{
	"extends": "tsconfig/base.json",
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": "./src",
		"target": "ES6",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"noEmit": true,
		"module": "esnext",
		"moduleResolution": "node",
		"jsx": "preserve",
		"resolveJsonModule": true
	},
	"exclude": ["node_modules", "src/__test__/**/*"],
	"include": ["src"]
}
